{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"src"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Run",
			"command": "dotnet",
			"type": "process",
			"args": [
				"run",
				"--project",
				"src"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Build & Run",
			"dependsOn": [
				"Build",
				"Run"
			],
			"dependsOrder": "sequence",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Run Tests",
			"command": "dotnet",
			"args": [
				"test"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			}
		}
	]
}
