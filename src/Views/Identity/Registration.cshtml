@model CurrencyViewer.ViewModels.RegistrationViewModel

<div class="row">
	<div class="col-12">
		<div>
			<h1>Registration</h1>
			<form method="post" asp-controller="Identity" asp-action="RegisterUser"></form>
				<div asp-validation-summary="ModelOnly"></div>
				<label class="form-label" asp-for="Email"></label><br>
				<input class="form-control" asp-for="Email">
				<span asp-validation-for="Email"></span>
				<label class="form-label" asp-for="Password"></label>
				<input class="form-control" asp-for="Password">
				<span asp-validation-for="Password"></span>
				<label class="form-label" asp-for="ConfirmedPassword"></label>
				<input class="form-control" asp-for="ConfirmedPassword">
				<span asp-validation-for="ConfirmedPassword"></span>
				<input class="btn btn-primary mt-3" type="submit" value="Register">
			</form>
		</div>
	</div>
</div>
