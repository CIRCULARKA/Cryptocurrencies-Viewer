@model CurrencyViewer.ViewModels.RegistrationViewModel

<div class="row">
	<div class="col-12">
		<div>
			<h1>Registration</h1>
			<form class="form" asp-controller="Identity" asp-action="RegisterUser">
				<div asp-validation-summary="ModelOnly"></div>
				<div class="mb-3">
					<input class="form-control" asp-for="Email" placeholder="Email" />
					<span class="text-danger" asp-validation-for="Email"></span>
				</div>
				<div class="mb-3">
					<input class="form-control" asp-for="Password" placeholder="Password" />
					<span class="text-danger" asp-validation-for="Password"></span>
				</div>
				<div class="mb-3">
					<input class="form-control" asp-for="ConfirmedPassword" placeholder="Password comfirmation" />
					<span class="text-danger" asp-validation-for="ConfirmedPassword"></span>
				</div>
				<input class="btn btn-primary mt-3" type="submit" value="Register" />
			</form>
		</div>
	</div>
</div>
